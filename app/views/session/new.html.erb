<% provide(:title, "Log in") %>
<h1>Log in</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit "欢迎登陆", class: "btn btn-primary" %>
    <% end %>
    <p>还没有账号?
      <%= link_to "现在注册！", signup_path %></p>
  </div>
</div>
